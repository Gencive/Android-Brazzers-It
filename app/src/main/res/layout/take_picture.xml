<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="com.pkesslas.brazzersit.TakePicture"
				android:background="@color/primary">

	<FrameLayout
		android:id="@+id/preview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<TextView
		android:id="@+id/brazzers_logo"
		android:layout_width="175dp"
		android:layout_height="50dp"
		android:background="@drawable/brazzers"
		android:layout_alignBottom="@+id/preview"
		android:layout_alignRight="@+id/preview"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="10dp"/>

	<TextView
		android:id="@+id/btn_take_picture"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/take_picture"
		android:layout_marginBottom="5dp"
		android:layout_above="@+id/brazzers_logo"
		android:layout_centerHorizontal="true"/>
</RelativeLayout>
